{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "module": "ESNext",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,

    "moduleResolution": "bundler",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
    },
    "allowJs": true
  },
  "include": [
    "./src",
    "./test",
  ],
}
